.sn-component
  .panel.static
    .content
      .panel-section
        .panel-row

          .panel-column.meta.body-text-color
            .title{"ng-click" => "note.showId = !note.showId"} {{note.content.title}}
            .created{"ng-if" => "note.showId"} ID {{note.uuid}}
            .created Created {{note.created_at}}
            .created Updated {{note.updated_at}}

          .panel-column.info-sections.body-text-color
            .section
              .title Words
              .content {{wordCount}}

            .section
              .title Paragraphs
              .content {{paragraphCount}}

          .panel-column.info-sections.body-text-color
            .section
              .title Characters
              .content {{characterCount}}

            .section
              .title Read Time
              .content {{readTime}}

          .panel-column.button-group
            .button.default.element-background-color.element-text-color{"ng-click" => "buttonPressed('duplicate')"}
              .label Duplicate
            .button.default.element-background-color.element-text-color{"ng-click" => "buttonPressed('copy')"}
              .label Copy to Clipboard
            .button.default.element-background-color.element-text-color{"ng-click" => "buttonPressed('save')"}
              .label Save
            .button.default.element-background-color.element-text-color{"ng-click" => "buttonPressed('email')"}
              .label Email
